<% content_for :title, "Todos" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-white">Todos</h1>
    <%= link_to "New Todo", new_todo_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-black bg-white hover:bg-gray-200 transition-colors" %>
  </div>

  <div id="todos" class="space-y-4">
    <% @todos.each do |todo| %>
      <div class="bg-gray-900/50 border border-gray-800/50 rounded-lg p-6 hover:bg-gray-800/50 transition-colors backdrop-blur-sm">
        <%= render todo %>
        <div class="mt-4 flex space-x-3">
          <%= link_to "View", todo_path(todo), class: "text-blue-400 hover:text-blue-300 text-sm font-medium transition-colors" %>
          <%= link_to "Edit", edit_todo_path(todo), class: "text-gray-400 hover:text-gray-300 text-sm font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
