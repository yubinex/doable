<div class="bg-gray-900/50 border border-gray-800/50 rounded-lg p-6 backdrop-blur-sm">
  <%= form_with(model: todo, class: "space-y-6") do |form| %>
    <% if todo.errors.any? %>
      <div class="bg-red-900/20 border border-red-800/30 rounded-lg p-4">
        <h2 class="text-red-300 font-semibold mb-2">
          <%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:
        </h2>
        <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
          <% todo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-300" %>
      <%= form.text_field :name, class: "block w-full px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-white/20 focus:border-white/30 transition-colors" %>
    </div>

    <div class="space-y-2">
      <%= form.label :description, class: "block text-sm font-medium text-gray-300" %>
      <%= form.textarea :description, rows: 3, class: "block w-full px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-white/20 focus:border-white/30 transition-colors" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <%= form.label :priority, class: "block text-sm font-medium text-gray-300" %>
        <%= form.number_field :priority, min: 1, max: 10, class: "block w-full px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-white/20 focus:border-white/30 transition-colors" %>
      </div>

      <div class="space-y-2">
        <%= form.label :project_id, "Project", class: "block text-sm font-medium text-gray-300" %>
        <%= form.collection_select :project_id,
                               Project.all,
                               :id,
                               :name,
                               { prompt: "Select a project" },
                               { class: "block w-full px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-white/20 focus:border-white/30 transition-colors" } %>
      </div>
    </div>

    <div class="flex items-center space-x-3">
      <%= form.check_box :completed, class: "h-4 w-4 text-white bg-gray-800/50 border-gray-700 rounded focus:ring-white/20 focus:ring-2" %>
      <%= form.label :completed, "Mark as completed", class: "text-sm font-medium text-gray-300" %>
    </div>

    <div class="flex space-x-3">
      <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-black bg-white hover:bg-gray-200 transition-colors" %>
      <%= link_to "Cancel", todo.persisted? ? todo_path(todo) : todos_path, class: "inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-lg text-gray-300 hover:text-white hover:border-gray-600 transition-colors" %>
    </div>
  <% end %>
</div>
