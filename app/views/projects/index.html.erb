<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-white">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-black bg-white hover:bg-gray-200 transition-colors" %>
  </div>

  <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @projects.each do |project| %>
      <div class="bg-gray-900/50 border border-gray-800/50 rounded-lg p-6 hover:bg-gray-800/50 transition-colors backdrop-blur-sm">
        <h3 class="text-lg font-semibold text-white mb-2">
          <%= link_to project.name, project_path(project), class: "hover:text-gray-300 transition-colors" %>
        </h3>
        <p class="text-gray-400 text-sm">
          <%= pluralize(project.todos.count, 'todo') %>
        </p>
      </div>
    <% end %>
  </div>
</div>
